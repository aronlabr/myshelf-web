<h2 class="page-title">Buscar Autor</h2>
<form action="/authors" method="get">
    <label>Nombre</label>
    <input type="text" name="name" value="<% searchOptions.name %>">
    <button type="submit">Buscar</button>
</form>
<br>
<% authors.forEach(author => { %>
    <div><%= author.name %></div>
    <div class="btn-row">
        <a class="btn btn-primary" href="/authors/<%= author.id %>">Ver</a>
        <a class="btn btn-primary" href="/authors/<%= author.id %>/edit">Editar</a>
        <%- include('../partials/deleteForm.ejs', {url: `/authors/${author.id}`}) %>
    </div>
<% }) %>